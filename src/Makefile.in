# @configure_input@

package = @PACKAGE_NAME@
version = @PACKAGE_VERSION@
tarname = @PACKAGE_TARNAME@
distdir = $(tarname)-$(version)
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir=@bindir@
libdir=@libdir@
includedir=@includedir@
datarootdir = @datarootdir@
CC = @GAMBITS_C_COMPILER@
LIB_EXTENSION = @LIB_EXTENSION@
SHARED_LIB_FLAG = @SHARED_LIB_FLAG@
all: libbug.so

%.scm : %.bug.scm
	../bug-gsc/bug-gscpp $< $@


%.c : %.scm
	gsc -c $<

%.o : %.c
	gsc -obj $<

%.pdf: %.bug.scm
	../bug-gsc/bug2tex $< $@.tex
	pdflatex $@

libbug.so: bug-language.scm bug-language-end.scm main.pdf main.c
	#build the shared library
	gsc -link -o libbug.c main
	gsc -obj -cc-options "-D___SHARED" libbug.c main.c
	$(CC) $(SHARED_LIB_FLAG) -lgambit  libbug.o main.o -o libbug$(LIB_EXTENSION)
	# for reasons I don't yet understand, leaving main.[co] around causes
	# problems in subsequent makes
	rm main.c main.o
	#build the loadable library
	gsc -link -flat -o libbug.o1.c main  > /dev/null
	gsc -obj -cc-options "-D___DYNAMIC" libbug.o1.c main.c
	$(CC) $(SHARED_LIB_FLAG)  -lgambit libbug.o1.o main.o -o libbug.o1
	# for reasons I don't yet understand, leaving main.[co] around causes
	# problems in subsequent makes
	rm main.c main.o


install:
	install -d $(DESTDIR)$(libdir)
	install -m 0755 libbug$(LIB_EXTENSION) $(DESTDIR)$(libdir)
	install -m 0755 libbug.o1 $(DESTDIR)$(libdir)
	install -d $(DESTDIR)$(includedir)/$(package)/
	install -m 0755 libbug.c $(DESTDIR)$(includedir)/$(package)/
	install -m 0755 libbug#.scm $(DESTDIR)$(includedir)/$(package)/
	install -m 0755 libbug-macros.scm $(DESTDIR)$(includedir)/$(package)/

uninstall:
	-rm $(DESTDIR)$(libdir)/libbug$(LIB_EXTENSION)
	-rm $(DESTDIR)$(libdir)/libbug.o1
	-rm $(DESTDIR)$(includedir)/$(package)/libbug.c
	-rm $(DESTDIR)$(includedir)/$(package)/libbug#.scm
	-rm $(DESTDIR)$(includedir)/$(package)/libbug-macros.scm

Makefile: Makefile.in ../config.status
	cd .. && ./config.status $@

../config.status: ../configure
	cd .. && ./config.status --recheck


.PHONY: all clean install uninstall
